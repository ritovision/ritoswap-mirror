{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2022", "webworker"],
    "moduleResolution": "bundler",
    "types": ["vitest/globals"],
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "wrangler.toml", "vitest.config.ts"]
}
