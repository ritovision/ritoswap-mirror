# Strict peer deps to catch conflicts early
strict-peer-dependencies=false

# Auto-install peer deps when missing
auto-install-peers=true

# Deduplicate shared peers across installs
dedupe-peer-dependents=true

# ── ISOLATION MODE ──
# Each workspace gets its own lockfile
shared-workspace-lockfile=false
# Never link one workspace into another
link-workspace-packages=false
