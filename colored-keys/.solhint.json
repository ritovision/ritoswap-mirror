{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.20"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "max-line-length": ["warn", 200],
    "no-global-import": "off",
    "reason-string": "off",
    "gas-custom-errors": "off",
    "quotes": "off"
  }
}
