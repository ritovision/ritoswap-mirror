{
   "name": "colored-keys",
   "version": "1.0.0",
   "private": true,
   "scripts": {
      "compile": "hardhat compile",
      "node:start": "npx hardhat node",
      "deploy:hardhat": "hardhat run scripts/deploy-contract.ts --network localhost",
      "mint:hardhat": "hardhat run scripts/mint-token.ts --network localhost",
      "burn:hardhat": "hardhat run scripts/burn-token.ts --network localhost",
      "check-supply:hardhat": "hardhat run scripts/check-supply.ts --network localhost",
      "transfer:hardhat": "hardhat run scripts/transfer-token.ts --network localhost",
      "verify:hardhat": "cross-env HARDHAT_NETWORK=localhost ts-node scripts/verify.ts localhost",
      "deploy:local-blockchain": "hardhat run scripts/deploy-contract.ts --network local-blockchain",
      "mint:local-blockchain": "hardhat run scripts/mint-token.ts      --network local-blockchain",
      "burn:local-blockchain": "hardhat run scripts/burn-token.ts      --network local-blockchain",
      "check-supply:local-blockchain": "hardhat run scripts/check-supply.ts  --network local-blockchain",
      "transfer:local-blockchain": "hardhat run scripts/transfer-token.ts  --network local-blockchain",
      "verify:local-blockchain": "cross-env HARDHAT_NETWORK=local-blockchain ts-node scripts/verify.ts local-blockchain",
      "deploy:sepolia": "hardhat run scripts/deploy-contract.ts      --network sepolia",
      "mint:sepolia": "hardhat run scripts/mint-token.ts           --network sepolia",
      "burn:sepolia": "hardhat run scripts/burn-token.ts           --network sepolia",
      "check-supply:sepolia": "hardhat run scripts/check-supply.ts         --network sepolia",
      "transfer:sepolia": "hardhat run scripts/transfer-token.ts       --network sepolia",
      "verify:sepolia": "cross-env HARDHAT_NETWORK=sepolia ts-node scripts/verify.ts sepolia",
      "deploy:mainnet": "ts-node scripts/deploy-mainnet-viem.ts",
      "verify:mainnet": "cross-env HARDHAT_NETWORK=mainnet ts-node scripts/verify.ts mainnet",
      "verify": "node scripts/verify.js",
      "test": "hardhat test",
      "test:gas": "cross-env REPORT_GAS=true hardhat test",
      "test:gas-profile": "cross-env REPORT_GAS=true hardhat test test/GasProfiling.test.ts",
      "test:coverage": "hardhat coverage",
      "coverage:gas": "cross-env REPORT_GAS=true hardhat coverage",
      "test:key": "hardhat test test/KeyToken.test.ts",
      "test:one": "hardhat test test/OneWalletPerKeyToken.test.ts",
      "test:color": "hardhat test test/ColorGeneratorDetailed.test.ts",
      "test:libs": "hardhat test test/Libraries.test.ts",
      "lint:sol": "hardhat check",
      "echidna": "ts-node scripts/echidna/run-docker.ts",
      "slither": "ts-node scripts/slither/slither-docker.ts",
      "slither:summary": "pnpm run slither -- --print human-summary",
      "slither:check": "pnpm run slither -- --filter-paths node_modules --exclude-informational",
      "slither:report": "npm run slither -- --filter-paths node_modules --checklist > slither-output/slither-report.md",
      "slither:json": "pnpm run slither -- --filter-paths node_modules --json slither-output/slither-results.json",
      "slither:critical": "pnpm run slither -- --filter-paths node_modules --exclude-informational --exclude-low --exclude-optimization",
      "slither:clean": "docker compose down && rm -rf slither-output/*",
      "mythril": "ts-node scripts/mythril/run-docker.ts"
   },
   "devDependencies": {
      "@nomicfoundation/hardhat-toolbox": "^5.0.0",
      "@nomicfoundation/hardhat-verify": "^2.0.14",
      "@nomiclabs/hardhat-solhint": "^4.0.2",
      "@types/chai": "^4.3.20",
      "@types/node": "^22.15.26",
      "chai": "^4.5.0",
      "cross-env": "^7.0.3",
      "dotenv": "^16.5.0",
      "hardhat": "^2.24.1",
      "hardhat-gas-reporter": "^1.0.8",
      "solhint": "^6.0.0",
      "ts-node": "^10.9.2",
      "typescript": "^5.8.3",
      "winston": "^3.17.0"
   },
   "dependencies": {
      "@openzeppelin/contracts": "^5.3.0",
      "ethers": "^6.15.0",
      "viem": "^2.31.4",
      "zod": "^4.0.17"
   }
}
