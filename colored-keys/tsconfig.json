{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "types": ["node", "hardhat"], 
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@logger": ["./lib/logger/logger"],
      "@env": ["./env"]
    }
  },
  "include": ["./scripts", "./test", "./typechain-types", "./lib", "./env.ts"],
  "files": ["./hardhat.config.ts"]
}