{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:sepolia": {
      "cache": false,
      "persistent": true
    },
    "dev:mainnet": {
      "cache": false,
      "persistent": true
    },
    "deploy:localhost": {
      "cache": false
    },
    "deploy:sepolia": {
      "cache": false
    },
    "deploy:mainnet": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    }
  }
}